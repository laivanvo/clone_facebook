<div id="profile_modal" class="modal">
  <div class="modal-content">
    <span class="close" id="close_profile_modal">&times;</span>
    <div class="title">
      <h4>Thêm tiểu sử</h4>
    </div>
    <div class="auth">
      <div class="avatar">
        <%= image_tag('ava1.jpg') %>
      </div>
      <div class="name">
        <div class="item">
          <%= current_user.name %>
        </div>
      </div>
    </div>
    <%= form_with model: profile do |form| %>
      <%= form.label "Tên" %>
      <%= form.text_field :name %>
      <%= form.label "Nơi ở" %>
      <%= form.select :address, Profile::LIST_ADDRESS %>
      <%= form.label "Ngày sinh" %>
      <%= form.date_select :birthday %>
      <div class="upload">
        Thêm ảnh đại diện
        <label for="post_content"><%= image_tag('img_icon.png') %></label>
        <%= form.file_field :content, accept:'image/*' %>
      </div>
      <button class="button_wrap" type="submit">Cập nhật</button>
    <% end %>
  </div>
</div>
