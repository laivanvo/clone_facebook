var html = $("<%= escape_javascript(render(partial: "block_comments/button_clicked", locals: { block: @block })) %>")
var button = $("<%= escape_javascript(".block_user_post_#{@block.post_id}") %>")
button.html(html);
$(".drop_down").find("form").off("click");
$(".drop_down")
  .find("form")
  .click(function () {
    $(this)
      .parent()
      .parent()
      .parent()
      .find(".drop_down")[0]
      .classList.toggle("show");
  });
