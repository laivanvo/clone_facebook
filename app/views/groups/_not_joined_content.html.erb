<div class="name_wrap">
  <div class="item">
    <h1 class='name'><%= group.name %></h1>
    <div class='name'>Nhóm của <%= group.user.name || 'người dùng facebook' %></div>
  </div>
  <div class="item">
    <% if relation %>
      <%= button_to 'Hủy yêu cầu', member_relation_path(relation.id), method: :delete, params: { relation: { group_id: group.id } } %>
    <% else %>
      <%= button_to 'Tham gia nhóm', member_relations_path, params: { relation: { group_id: group.id, relation_type: group.public ? 'joined' : 'requested' } } %>
    <% end %>
  </div>
</div>

